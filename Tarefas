blueprint:
  name: "Espanar a casa - Versão Funcional"
  description: "Automação para controlar o contador de espanar a casa"
  domain: automation
  input: {}

trigger_variables:
  incrementar: null
  resetar: null

triggers:
  - platform: time
    at: "00:01:00"
    id: "incrementar"
  - platform: state
    entity_id: input_boolean.espanar_a_casa
    from: "on"
    to: "off"
    id: "resetar"

action:
  - choose:
      - conditions:
          - condition: trigger
            id: "incrementar"
        sequence:
          - service: counter.increment
            target:
              entity_id: counter.espanar_a_casa
          - delay: "00:00:01"
  
  - choose:
      - conditions:
          - condition: trigger
            id: "resetar"
        sequence:
          - service: counter.reset
            target:
              entity_id: counter.espanar_a_casa
  
  - choose:
      - conditions:
          - condition: or
            conditions:
              - condition: trigger
                id: "incrementar"
              - condition: trigger
                id: "resetar"
          - condition: state
            entity_id: input_boolean.espanar_a_casa
            state: "off"
          - condition: template
            value_template: "{{ states('counter.espanar_a_casa')|int >= 7 }}"
        sequence:
          - service: input_boolean.turn_on
            target:
              entity_id: input_boolean.espanar_a_casa
