blueprint:
  name: Gerenciar rotina de espanar a casa
  description: >
    Incrementa um contador diariamente, ativa um input_boolean ao atingir um limite
    e reseta o contador quando o booleano for desligado.
  domain: automation
  input:
    counter_entity:
      name: Contador
      description: Entidade do tipo counter que será incrementada.
      selector:
        entity:
          domain: counter
    boolean_entity:
      name: Booleano
      description: Entidade do tipo input_boolean que será ligada ao atingir o limite.
      selector:
        entity:
          domain: input_boolean
    limite_contador:
      name: Limite do contador
      description: Valor do contador que ativará o booleano.
      default: 7
      selector:
        number:
          min: 1
          max: 365
          unit_of_measurement: dias
    horario_incremento:
      name: Horário diário de incremento
      description: Horário em que o contador será incrementado todos os dias.
      default: "00:00:00"
      selector:
        time:

trigger:
  - platform: time
    at: !input horario_incremento
  - platform: numeric_state
    entity_id: !input counter_entity
    above: !input limite_contador
  - platform: state
    entity_id: !input boolean_entity
    to: "off"

condition: []

action:
  - choose:
      # Incrementa o contador no horário definido
      - conditions:
          - condition: time
            at: !input horario_incremento
        sequence:
          - service: counter.increment
            target:
              entity_id: !input counter_entity

      # Liga o booleano ao atingir o limite
      - conditions:
          - condition: numeric_state
            entity_id: !input counter_entity
            above: !input limite_contador
          - condition: state
            entity_id: !input boolean_entity
            state: "off"
        sequence:
          - service: input_boolean.turn_on
            target:
              entity_id: !input boolean_entity

      # Reseta o contador quando o booleano for desligado
      - conditions:
          - condition: state
            entity_id: !input boolean_entity
            state: "off"
        sequence:
          - service: counter.reset
            target:
              entity_id: !input counter_entity

mode: single
